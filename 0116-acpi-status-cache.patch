From: Arjan van de Ven <arjan@linux.intel.com>
Date: Sun, 14 May 2017 23:53:08 +0000
Subject: [PATCH] acpi: status cache

---
 drivers/acpi/scan.c     | 3 ++-
 include/acpi/acpi_bus.h | 2 ++
 2 files changed, 4 insertions(+), 1 deletion(-)

diff --git a/drivers/acpi/scan.c b/drivers/acpi/scan.c
index 6efe7edd7b1e..2c132efbb87a 100644
--- a/drivers/acpi/scan.c
+++ b/drivers/acpi/scan.c
@@ -2092,7 +2092,8 @@ static void acpi_bus_attach(struct acpi_device *device, bool first_pass)
 	if (ACPI_SUCCESS(acpi_bus_get_ejd(device->handle, &ejd)))
 		register_dock_dependent_device(device, ejd);
 
-	acpi_bus_get_status(device);
+	if (!device->status_valid)
+		acpi_bus_get_status(device);
 	/* Skip devices that are not present. */
 	if (!acpi_device_is_present(device)) {
 		device->flags.initialized = false;
diff --git a/include/acpi/acpi_bus.h b/include/acpi/acpi_bus.h
index f28b097c658f..03bbdddd5283 100644
--- a/include/acpi/acpi_bus.h
+++ b/include/acpi/acpi_bus.h
@@ -359,6 +359,7 @@ struct acpi_device {
 	struct list_head wakeup_list;
 	struct list_head del_list;
 	struct acpi_device_status status;
+	int status_valid;
 	struct acpi_device_flags flags;
 	struct acpi_device_pnp pnp;
 	struct acpi_device_power power;
@@ -452,6 +453,7 @@ static inline void *acpi_driver_data(struct acpi_device *d)
 static inline void acpi_set_device_status(struct acpi_device *adev, u32 sta)
 {
 	*((u32 *)&adev->status) = sta;
+	adev->status_valid = 1;
 }
 
 static inline void acpi_set_hp_context(struct acpi_device *adev,
